//verificar se um numero é positivo negativo ou zero

numero = 0;

numero = prompt("Digite sua idade");

if (numero > 0) {
  alert("O numero é positivo");
} else if (numero < 0) {
  alert("O numero é negativo");
} else if (numero == 0) {
  alert("O numero é igual a zero");
} else {
  alert("O que foi fornecido nao é um numero");
}

//verificar se uma pessoa é maior de idade ou não

idade = 0;

idade = prompt("Digite sua idade");

if (idade < 18) {
  alert("Menor de idade");
} else if (idade >= 18) {
  alert("Maior de idade");
} else {
  alert("O que foi escrito não sao numeros");
}

//verificar se um numero é impar ou par

numero = 0;

numero = prompt("Digite um numero");

if (numero % 2 == 0) {
  alert("O numero é par");
} else if (numero % 2 != 0) {
  alert("O numero é impar");
}

//verificar se uma pessoa ficou passou no teste(notas acima de 7), se ela está de recuperação(notas entre 5 e 7) ou se ela reprovou(nota abaixo de 5)

nota = 0;

nota = prompt("Digite sua nota");

if (nota >= 7) {
  alert("Esta aprovado");
} else if (nota >= 5) {
  alert("Esta de recuperação");
} else if (nota < 5) {
  alert("Esta reprovado");
}

//Um codigo onde o usuario consegue fazer contas de +, -, /, *

num1 = 0;
num2 = 0;
operação = "soma";

num1 = prompt("Escreva o primeiro numero");
num2 = prompt("Escreva o segundo numero");
operacao = prompt("Escreva qual a operação sera utilizada");

if (operacao == "soma") {
  alert(parseInt(num1) + parseInt(num2));
} else if (opercao == "subtracao") {
  alert(parseInt(num1) - parseInt(num2));
} else if (opercao == "multiplicação") {
  alert(parseInt(num1) * parseInt(num2));
} else if (opercao == "divisão") {
  alert(parseInt(num1) / parseInt(num2));
}
