<script>
    function corredorEstreito(){
        alert('Você continou pelo corredor estreito')
        console.log('Ao caminhar um pouco pelo corredor vai aparecendo armaduras antigas e em uma delas havia uma espada enferrujada')
        escolhaEspada = prompt('Você deseja pegar a espada enferrujada? (você pode se ferir coma as ferrugens) \n1- Pegar a espada \n2- Não pegar a espada')
    
        while (escolhaEspada <  1 || escolhaEspada > 2){
            escolhaEspada = prompt('Esolhe direito ai comédia \n1- Pegar a espada \n2- Ignorar a espada')
        }
    
        return escolhaEspada
    }
    
    function grandePortaAzul(){
        alert('Você entrou pela porta')
        console.log('Você fica levemente cansado depois de empurrar a grande e pesada porta')
        console.log('Após um leve descanso você percebe que tem dois caminhos a seguir, o caminho da esquerda e o da direita')
    
        return grandePortaAzul
    }
    
    function portaEspadaEscudo(){
        
        console.log('Após passar pela porta o grande salão que há pouco tempo estava escuro, derepente se iluminou com as chamas azuladas das tochas na parede, revelando o que havia dentro da sala...')
        console.log('Ao caminhar um pouco dentro da sala, você sente como se estivesse sendo observado e de repente um estrondo ensurdecedor, logo a sua frente apareceram uma armadura encantada, você sente que havia algo muito valioso ali que elas guardavam.')
        alert('Você se virou para fugir daquela sala, mas de repente a porta pela qual você acabou de entrar se fechou, a única opção era enfrentar a armadura encantada')
    }
    
    function batalhaPortaEscudo(){
        
        atkArmadura = 10
        defArmadura = 10
        vidaArmadura = 30
    
    while (vidaArmadura > 0 || vidaJogador > 0){
        danoJogador = atkJogador - defArmadura
            if (danoJogador > 0){
                vidaArmadura = vidaArmadura - danoJogador
                alert(nome + ' deu ' + danoJogador + ' de dano na armadura')
            }else (nome + ' não conseguiu dar dano na armadura')
    
        danoArmadura = atkArmadura - defJogador
            if (danoArmadura > 0){
                vidaJogador = vidaJogador - danoArmadura
                alert('armadura deu ' + danoArmadura + ' de dano no ' + nome)
            }else {
                alert('Armadura não deu dano no ' + nome)
                break
            }
         }
    }

    function salaSecreta(){
        alert('Quando você se aproxima para abrir o báu ele começa a emitir uma aura dourada')
        alert('Quando você abriu o báu você se depararou com 4 itens...')
        escolhaBau = prompt('Qual dos 4 itens você vai querer pegar? \n \n1- uma calice dourada encrustado com pedras preciosas (faz com quem bebe ganhe anos a mais de vida) \n2- Um escudo de aço que te deixa mais resistente aos inimigos \n3- Uma espada de duas mãos com a lamina branca (emitia um poder comparado aos deuses) \n4- Uma poção suspeita que soltva bolhas de dentro dela (tinha um cheiro desagradavel)')

        while (escolhaBau < 1 || escolhaBau > 4){
            prompt('Se você não escolher direito vai ficar sem nenhum item, aviso ta dado \n \n1- Calice dourado com pedras preciosas \n2- Escudo de aço \n3- Espada de duas mãos com a lamina branca \n4- Poção suspeita')
        }

        if (escolhaBau == '1'){
            vidaJogador = vidaJogador + 25
            alert('Ao tomar o liquido do calice você sente uma sensação de longevidade')
        } else if(escolhaBau == '2'){
            defJogador = defJogador + 15
            alert('Ao pegar o escudo você sente como se mais nada te afetasse')
        } else if (escolhaBau == '3'){
            atkJogador = atkJogador + 20
            defJogador = defJogador + 10
            alert('Você escolhe trocar a espada enferrujada pela espada da lamina branca que aparentava ter um poder enorme')
        } else if (escolhaBau == '4'){
            vidaJogador = vidaJogador + 15
            defJogador = defJogador + 10
            alert('Ao tomar a poção suspeita você sente como se tivesse ganhado uma resistencia que você não tinha antes')
        } alert('Ao escolher o item você sente como se tivesse ficado mais poderoso \n \natack: ' + atkJogador + ' \ndefesa: ' + defJogador + ' \nvida: ' + vidaJogador)
        alert('Depois que você pegou o primeiro item o báu sumiu deixando a sala vazia')
        
    }

    function salaComBau(){
        console.log('O interior daquela sala era incrivelmente magnifico as paredes eram brancas como as nuvens com detalhes dourados com pilares de marmore branco segurando a estatua de um dragão dourada')
        console.log('Embaixo da estatua havia um bau prata com partes douradas com duas estatuas de dragão em cada ponta dele')
        alert('Ao abrir o bau você se depara com 3 itens...')
        escolhaBauDragao = prompt('Qual dos 3 itens você gostaria de pegar \n \n1- Uma magnifica armadura de escamas de dragão \n2- Uma espada com a lamina vermelha e o punho com um desenho de dragao prata \n3- Um artefato de um dragao vermlho')

        while (escolhaBauDragao < 1 || escolhaBauDragao > 3){
            prompt('Se você não escolher direito o bau vai se fechar \n \n1- A armadura de escamas de dragao \n2- A espada vermelha com o simbolo de dragao \n3- Artefato do dragao vermelho')
        }

        if (escolhaBauDragao == '1'){
            alert('Ao vestir a armadura você sente a senção que o calor que essa armadura emitia te deixava mais protegido')
            defJogador = defJogador + 25
        } else if (escolhaBauDragao == '2'){
            alert('Você decidiu trocar a sua espada da lamina branca pela a espada de lamina vermelha, ao empunhar a espada vermelha uma aura ardente começa a sair por ela')
            atkJogador = atkJogador + 20
        } else if (escolhaBauDragao == '3'){
            alert('Ao pegar o artefato do dragão você sente a sensação de estar mais protegido')
            vidaJogador = vidaJogador + 25
        } alert('Você sente que ficou muito mais forte \n \natack: ' + atkJogador + ' \ndefesa: ' + defJogador + ' \nvida: ' + vidaJogador)
        alert('Ao pegar o item que você escolheu o bau se fechou com os outros 2 itens dentro')
    }

    var nome = ''
    var atkJogador = 15
    var defJogador = 10
    var vidaJogador = 40
    
    nome = prompt('Olá bravo jogador, me fale qual o seu nome')
    alert(nome + ' seja bem vindo a Camâra Secreta...')
    
    console.log('Durante mais uma de suas explorações, enquanto andava em uma floresta você se depara com uma caverna descendo pelo chão, com o seu nobre espirito de aventureiro você decidiu adentrar nela')
    
    console.log('Ao entrar na caverna você se depara com um corredor escuro, conforme você adentrava mais a fundo no corredor a escuridão ia se dicipando, ao final do corredor você se depara com uma grande porta de madeira azul com entalhes brancos e a direita o corredor estreito que dava continuação ao caminho')
    
    escolha = prompt('Qual vai ser sua escolha? \n1- você escolhe ir para frente (grande porta azul) \n2- Você decidi ir pela direita (corredor estreito)')
    
    if (escolha == '1'){
        grandePortaAzul()
    }
    
    if (escolha == '2'){
        espada = corredorEstreito()
        if (espada == 1){
            atkJogador = atkJogador + 2
            alert('Ao pegar a espada em suas maõs você não sente muita diferença, só um cheiro de ferrugem forte')
        } else if(espada == 2){
            atkJogador = atkJogador + 0
            alert('Você ignora a espada e continua o seu caminho (as vezes é melhor não arriscar)')
        }
        alert('O cheiro de ferrugem parece ter mudado algo \n\natack: ' + atkJogador + ' \ndefesa: ' + defJogador + '\nvida: ' + vidaJogador)
    
        console.log('Você empunhou a espada enferrujada e continuou no caminho do corredor')
    }

        console.log('Ao chegar no final do corredor você se depara com um porta de ferro com um simbolo de um escudo e dos espadas passando por ele, e sente uma senção estranha passar pelo seu corpo, e se pergunta se realmente é a melhor escolha pasar por aquela porta')
    
    escolhaPortaEscudo = prompt('Qual vai ser sua escolha? \n1- passar pela porta e descobrir o que tem depois dela \n2- voltar pelo corredor até a grande porta azul')
    
    if (escolhaPortaEscudo == '2'){
        grandePortaAzul()
        alert('Você acha que a melhor opção esquecer aquela porta com a gravura de um escudo e voltar para a grande porta azul')
    }
    
    if (escolhaPortaEscudo == '1'){
        alert('Você passou pela porta espada escudo')
        alert('Você sente novamente aquela sensação estranha e tenta sair dali')
        portaEspadaEscudo()
    }
    
    alert('A unica opção que restou foi enfrentar a armadura')
    
    batalhaPortaEscudo()
        if (vidaJogador > 1 || vidaArmadura < 0){
            alert('Você derrotou a armadura encantada')
        } else if(vidaJogador < 0 || vidaArmadura > 1){
            alert('Você não conseguiu derrotar armadura')
        }

    console.log('Após derrotar a armadura ela começou a sumir como se a maldição que estava nela tivesse sido desfeita, todas as partes sumiram, pórem ela deixou alguma coisa brilhante no chão')
        alert('Ao ir se aproximando para mais perto do negocio brilhante, você percebe que é uma chave dourada...')
    console.log('Você pega ela e fica se perguntando o que é aquela chave consegue abrir')
    console.log('Ao explorar a sala você se depara com uma tocha na parede diferente das outras')
        escolhaTocha = prompt('Você deseja inspecionar a tocha? \n1- Inspecionar a tocha e ver o que há de errado com ela \n2- Não inspecionar a tocha')

        if (escolhaTocha == '1'){
            alert('Você decidiu inspecionar a tocha e ver o que havia de errado com ele')
            alert('Ao inspecionar a tocha você puxou ela para baixo, isso fez com que abrisse uma passagem secreta ao lado de uma estante velha')
            console.log('Ao se aproximar um pouco mais da passagem que havia acabado de se relevar, ela escondia um báu enorme dourado com entalhes brancos formando uma figura de dragão, sua ambição para descobrir o que aquele báu escondia dentro dele...')
            salaSecreta()
        } else if(escolhaTocha == '2'){
            alert('Você decidiu não inspecionar a tocha por ficar com receio do que poderia acontecer')
            console.log('Você ignorou a tocha suspeita e continuo explorando a sala da armadura')
        }

        if (escolhaTocha == 1){
            alert('Após o bau ter sumido com o resto dos itens você decide voltar ao salão onde estava a armadura encatada e continou explorando até que...')
        } else if (escolha == 2){
            alert('Você continuou explorando e não achou nada de mais até que...')
        }

        alert('Ao canto da sala você avistou uma porta de madeira escura, não era preta mas era muito escura')
        console.log('Ao chegar mais perto da porta você tenta abrir ela mais não consegue, analisando um pouco masi a porta você descobre que ela tem uma tranca com a moldura dourada com entalhes vermelhos formando a imagem de um dragão')
        alert('Pode ser que a chave que a armadura deixou consiga abrir essa porta...')

        escolhaChave = prompt('Você deseja tentar abrir a porta com a chave dourada? \n \n1- Inserir a chave e tentar abrir a porta \n2-Não tentar abrir')

        if (escolhaChave == '1'){
            alert('Ao colocar a chave na tranca você rodou ela e a porta começou a se abrir revelando o interior da sala')
            console.log('Ao ver o interior da sala você ficou paralizado por um momento, você nunca tinha visto nada parecido')
            salaComBau()
        }else if(escolhaChave == '2'){
            alert('Você não achou uma boa ideia tentara abrir a porta por não saber o que havia do outro lado e voltou a procurar alguma coisa de importante')
        }


</script>
