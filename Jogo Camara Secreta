<script>
function corredorEstreito(){
    alert('Você continou pelo corredor estreito')
    console.log('Ao caminhar um pouco pelo corredor vai aparecendo armaduras antigas e em uma delas havia uma espada enferrujada')
    escolhaEspada = prompt('Você deseja pegar a espada enferrujada? (você pode se ferir coma as ferrugens) \n1- Pegar a espada \n2- Não pegar a espada')

    while (escolhaEspada <  1 || escolhaEspada > 2){
        escolhaEspada = prompt('Esolhe direito ai comédia \n1- Pegar a espada \n2- Ignorar a espada')
    }

    return escolhaEspada
}

function grandePortaAzul(){
    alert('Você entrou pela porta')
    console.log('Você fica levemente cansado depois de empurrar a grande e pesada porta')
    console.log('Após um leve descanso você percebe que tem dois caminhos a seguir, o caminho da esquerda e o da direita')

    return grandePortaAzul
}

function portaEspadaEscudo(){
    alert('Você entrou pela porta espada escudo')
    console.log('Após passar pela porta o grande salão que há pouco tempo estava escuro, derepente se iluminou com as chamas azuladas das tochas na parede, revelando o que havia dentro da sala...')
    console.log('Ao caminhar um pouco dentro da sala, você sente como se estivesse sendo observado e de repente um estrondo ensurdecedor, logo a sua frente apareceram 2 armaduras encantadas, você sente que havia algo muito valioso ali que elas guardavam.')
}

var nome = ''
var atkJogador = 10
var defJogador = 8
var vidaJogador = 20

nome = prompt('Olá bravo jogador, me fale qual o seu nome')
alert(nome + ' seja bem vindo a Camâra Secreta...')

console.log('Durante mais uma de suas explorações, enquanto andava em uma floresta você se depara com uma caverna descendo pelo chão, com o seu nobre espirito de aventureiro você decidiu adentrar nela')

console.log('Ao entrar na caverna você se depara com um corredor escuro, conforme você adentrava mais a fundo no corredor a escuridão ia se dicipando, ao final do corredor você se depara com uma grande porta de madeira azul com entalhes brancos e a direita o corredor estreito que dava continuação ao caminho')

escolha = prompt('Qual vai ser sua escolha? \n1- você escolhe ir para frente (grande porta azul) \n2- Você decidi ir pela direita (corredor estreito)')

if (escolha == '1'){
    grandePortaAzul()
}

if (escolha == '2'){
    espada = corredorEstreito()
    if (espada == 1){
        atkJogador = atkJogador + 2
        alert('Ao pegar a espada em suas maõs você não sente muita diferença, só um cheiro de ferrugem forte')
    } else if(espada == 2){
        atkJogador = atkJogador + 0
        alert('Você ignora a espada e continua o seu caminho (as vezes é melhor não arriscar)')
    }
    alert('O cheiro de ferrugem parece ter mudado algo \n\natack: ' + atkJogador + ' \ndefesa: ' + defJogador + '\nvida: ' + vidaJogador)

    console.log('Você empunhou a espada enferrujada e continuou no caminho do corredor')
    console.log('Ao chegar no final do corredor você se depara com um porta de ferro com um simbolo de um escudo e dos espadas passando por ele, e sente uma senção estranha passar pelo seu corpo')

escolhaPortaEscudo = prompt('Qual vai ser sua escolha? \n1- passar pela porta e descobrir o que tem depois dela \n2- voltar pelo corredor até a grande porta azul')

if (escolhaPortaEscudo == '2'){
    grandePortaAzul()
    alert('Você decidiu voltar a porta azul do começo')
}

if (escolhaPortaEscudo == '1'){
    portaEspadaEscudo()
    alert('Você decidiu entrar pela porta espada escudo')
    }
}


</script>
