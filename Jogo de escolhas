<script>
function portaMisteriosa(){
    alert('Você entrou em uma sala')
    console.log('Você encontrou um bau misterioso e nesse bau havia 3 itens uma espada, longa e dourada, uma armadura, linda e relusente com as estrelas, e uma poção misteriosa vermelha com bolhas que saiam de dentro do liquido')
    escolhaItem = prompt('Qual item você gostaria de pegar pegar primeiro: \n1- espada longa e dourada \n2- armadura linda e relusente com as estrelas \n3- poção misteriosa vermelha com bolhas que saiam de dentro do liquido. qual você escolhe? ')
    
    while (escolhaItem < 1 || escolhaItem > 3){
        escolhaItem = prompt('Irmão você ta brincando com o sistema? escolhe um item direito, se não você vai ficar sem nada\n\n1- espada longa e dourada \n2- armadura linda e relusente como as estrelas \n3- poção misteriosa vermelha com bolhas que saem de dentro do liquido')
    }

console.log('Ao escolher o item, todo o bau se fechou e você não conseguiu mais abrir ele para pegar o restante ddos itens')

    return escolhaItem
}

function corredorEscuro() {
    alert('Você entrou no corredor escuro, que coragem!')
    console.log('Ao adentar no corredor você sente um arrepio na espinha, um pressentimento nem um pouco bom. Até que todas as tochas do corredor forão se acendendo e iluminando o caminho, e ao final do corredor você avista uma estatua de um golem de pedra congelado, atras desse golem havia uma porta de madeira gigante, ao chegar perto do golem ele acorda e não estava nem um pouco feliz')

}

var nome = ''
var atkJogador = 15
var defJogador = 10
var vidaJogador = 30

nome = prompt('Olá jovem aventureiro, me diga qual o seu nome?')
alert(nome + ' Seja bem vindo a caverna do DRAGÃO... ')

console.log('Você caiu em um buraco e ao se levantar você se deparou com a seguinte escolha, ao seu lado direito você nota uma porta grande com madeira avermelhada e com aspecto de velha caindo aos pedaços, e ao lado direito você nota um corredor longo e escuro sem conseguir ver o final')

escolha = prompt('Qual vai ser sua decisão: \n1- você escolhe seguir a direita (porta misteriosa) \n2- você escolhe seguir a esquerda (corredor escuro)')

if (escolha == '1'){
    item = portaMisteriosa()
    if (item == 1){
        atkJogador = atkJogador + 5
        alert('Ao segurar a espada antiga você sente uma força de vontade percorrendo seu corpo com a sabedoria e destreza de um rei antigo')
    }else if (item == 2){
        defJogador = defJogador + 10
        alert('Ao vestir a armadura, você sente um cosmo entrando em seu corpo')
    }else if (item == 3){
        vidaJogador = vidaJogador + 30
        alert('Ao consumir a poção (Você é no mínimo burro, beber coisas de procedencia duvidosa) você sente como se tivesse ganhado anos de vida a mais')
    }
    alert('Você sente sua força aumentando \n\natack: ' + atkJogador + ' \ndefesa: '+ defJogador + '\nvida: ' + vidaJogador)
    corredorEscuro
}

if (escolha == '2'){
    corredorEscuro()
}

atkGolen = 12
defGolen = 10
vidaGolen = 20

while (vidaGolen > 0 || vidaJogador > 0 ){

    danoJogador = atkJogador - defGolen
    if (danoJogador > 0){
        vidaGolen = vidaGolen - danoJogador
        alert(nome + ' deu ' + danoJogador + 'de dano no Golen')
    } else {
        alert(nome + ' não conseguiu dar dano no Golen')
    }

    danoGolen = atkGolen - defJogador
    if (danoGolen > 0){
        vidaJogador = vidaJogador - danoGolen
        alert('Golen deu ' + danoGolen + ' de dano no ' + nome)
    } else {
        alert('Golen não conseguiu dar dano no ' + nome)
    }

    if (vidaGolen < 0 || vidaJogador <0) {
        break
    }
}

</script>
